<%= form_for @expense do |f| %>
  <%= f.label :vendor %>
  <%= f.text_field :vendor %><br>

  <%= f.label :location %>
  <%= f.text_field :location %><br>

  <%= f.label :department %>
  <%= f.text_field :department %><br>

  <%= f.label :date %>
  <%= f.date_field :date %><br>

  <%= f.label :total %>
  <%= f.number_field :total, min: 0.01, max: 999999.99, step: 0.01 %><br>

  <%= f.label :production_id, "Production" %>
  <%= f.collection_select :production_id, Production.all, :id, :name %><br>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.submit %>
<% end %>
